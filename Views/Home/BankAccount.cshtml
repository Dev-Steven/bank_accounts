@model Transaction

<div class="row">
    <h1 class="col-6">Welcome, @ViewBag.user</h1>
    <p class="col-4">Current Balance: $@ViewBag.balance</p>
    <a asp-action="LogOut" asp-controller="Home">Logout</a>
</div>
<div class="row">
    <form asp-action="Transaction" asp-controller="Home" asp-route-id="@ViewBag.userId" method="post">
        <span class="text-danger" asp-validation-for="AmmountDecimal"></span>
        <label asp-for="AmmountDecimal"></label>
        <input asp-for="AmmountDecimal">
        <button class="btn btn-primary">Submit</button>
    </form>
</div>
<p>Transactions:</p>
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
        </tr> 
    </thead>
    <tbody>
        @foreach(var trans in ViewBag.transactions)
        {
            <tr>
                <td>$@trans.AmmountDecimal</td>
                <td>@trans.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>